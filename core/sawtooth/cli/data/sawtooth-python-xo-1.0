FROM ubuntu:xenial

RUN apt-get update && apt-get install -y -q \
    python3 \
    python3-zmq \
    python3-pip \
    python3-cbor

RUN pip3 install grpcio-tools

RUN mkdir -p /project/sawtooth-core

ARG PROJECT_DIR="/project/sawtooth-core"

WORKDIR $PROJECT_DIR

ENTRYPOINT ./bin/tp_xo_python_1.0 validator
