# Description:
#   Builds an environment to publish the Sawtooth Python SDK to PyPI.
#   Two variables, $PYPI_USER and $PYPI_PASS, must be passed in at runtime
#   using Docker's -e option.

FROM ubuntu:xenial

RUN apt-get update \
 && apt-get install -y \
    ca-certificates \
    python3 \
    python3-pip \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/* \
 && pip3 install --upgrade setuptools \
 && echo '[distutils]\n\
index-servers =\n\
  pypi\n\
\n\
[pypi]\n\
username=@USER@\n\
password=@PASS@\n\
' > /root/.pypirc

CMD sed -i'' -e "s/@USER@/$PYPI_USER/g" /root/.pypirc \
 && sed -i'' -e "s/@PASS@/$PYPI_PASS/g" /root/.pypirc \
 && cd /project/sawtooth-core/sdk/python \
 && python3 setup.py sdist upload -r pypi \
 && cd /project/sawtooth-core/signing \
 && python3 setup.py sdist upload -r pypi
