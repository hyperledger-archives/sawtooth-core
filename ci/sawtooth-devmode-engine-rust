# Description:
#   Builds an image with the Sawtooth Devmode Engine package installed from
#   the Sawtooth Package Repository.
#
# Build:
#   $ cd sawtooth-core/ci
#   $ docker build . -f sawtooth-devmode-engine-rust -t sawtooth-devmode-engine-rust
#
# Run:
#   $ cd sawtooth-ci
#   $ docker run sawtooth-devmode-engine-rust

FROM ubuntu:xenial

LABEL "install-type"="repo"

RUN echo "deb [arch=amd64] http://repo.sawtooth.me/ubuntu/bumper/stable xenial universe" >> /etc/apt/sources.list \
 && (apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 8AA7AF1F1091A5FD \
 || apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 8AA7AF1F1091A5FD) \
 && apt-get update \
 && apt-get install -y -q \
    sawtooth-devmode-engine-rust \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*


CMD ["devmode-engine-rust", "-C", "tcp://validator:5050"]
