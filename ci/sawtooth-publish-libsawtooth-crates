# Description:
#   Builds an environment to publish the Sawtooth Rust Crate to crates.io.
#   Your crates api token must be passed in as CARGO_CRED at runtime
#   using Docker's -e option.

# docker build -f ci/sawtooth-publish-libsawtooth-crates -t sawtooth-publish-libsawtooth-crates ci/
# docker run --rm -v $(pwd):/project/sawtooth-core -e CARGO_CRED=%CREDVALUE% sawtooth-publish-libsawtooth-crates

FROM ubuntu:bionic

RUN apt-get update \
 && apt-get install -y \
    curl \
    gcc \
    libssl-dev \
    pkg-config \
    unzip \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

# For Building Protobufs
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y \
 && curl -OLsS https://github.com/google/protobuf/releases/download/v3.5.1/protoc-3.5.1-linux-x86_64.zip \
 && unzip protoc-3.5.1-linux-x86_64.zip -d protoc3 \
 && rm protoc-3.5.1-linux-x86_64.zip

ENV PATH=$PATH:/protoc3/bin:/root/.cargo/bin

WORKDIR /project/sawtooth-core/libsawtooth

CMD cargo login $CARGO_CRED \
 && rm -f Cargo.lock \
 && cargo clean \
 && cargo test \
 && cargo publish --all-features
