FROM ubuntu:xenial

# Install packaging tools
RUN apt-get update && apt-get install -y -q \
    dpkg-dev \
    python3-pkg-resources \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Prepare repo directory
RUN mkdir -p /repo
WORKDIR /repo
COPY *.deb /repo/

# Create the local sawtooth repo
RUN ls -1 /repo \
 && echo "deb file:/repo ./" > /etc/apt/sources.list.d/sawtooth_local.list \
 && dpkg-scanpackages . /dev/null | gzip -9c > Packages.gz \
 && apt-get update

RUN apt-get update && apt-get install -y -q --allow-unauthenticated \
    python3-sawtooth-config

EXPOSE 40000/tcp

CMD ["tp_config", "-vv"]
