# Description:
#   Builds an image with Sawtooth TP Smallbank Go installed.
#
# Build:
#   This image should be built using `build_all installed`.
#
# Run:
#   $ docker run sawtooth-smallbank-tp-go

FROM ubuntu:xenial

LABEL "install-type"="local-debs"

RUN apt-get update \
 && apt-get install -y -q \
    dpkg-dev \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/* \
 && mkdir /debs

COPY sawtooth-smallbank-tp-go*.deb /debs/

RUN cd /debs \
 && dpkg-scanpackages . /dev/null | gzip -9c > Packages.gz \
 && echo "deb file:/debs ./" >> /etc/apt/sources.list \
 && echo "deb http://repo.sawtooth.me/ubuntu/ci xenial universe" >> /etc/apt/sources.list \
 && apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 8AA7AF1F1091A5FD \
 && apt-get update

RUN apt-get update \
 && apt-get install -y -q --allow-unauthenticated \
    libzmq3-dev \
    sawtooth-smallbank-tp-go \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

EXPOSE 4004/tcp

CMD ["smallbank-tp-go", "-C", "tcp://validator:4004"]
