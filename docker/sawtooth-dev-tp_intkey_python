# Description:
#   Builds an image with the dependencies needed by the Sawtooth Lake
#   TP Intkey installed.
#
# Build:
#   $ cd sawtooth-core/docker
#   $ docker build . -f sawtooth-dev-tp_intkey_python -t sawtooth-dev-tp_intkey_python
#
# Run:
#   $ cd sawtooth-core
#   $ docker run -v $(pwd):/project/sawtooth-core sawtooth-dev-tp_intkey_python

FROM sawtooth-dev-base

RUN mkdir -p /project/sawtooth-core

ARG PROJECT_DIR="/project/sawtooth-core"

WORKDIR $PROJECT_DIR

ENTRYPOINT ./bin/tp_intkey_python tcp://validator:40000
