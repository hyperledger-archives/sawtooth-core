# Description:
#   Builds an image to be used when developing in Go. The default CMD is to run
#   build_go.
#
# Build:
#   $ cd sawtooth-core/docker
#   $ docker build . -f sawtooth-dev-go -t sawtooth-dev-go
#
# Run:
#   $ cd sawtooth-core
#   $ docker run -v $(pwd):/project/sawtooth-core sawtooth-dev-go

FROM ubuntu:xenial

LABEL "install-type"="mounted"

RUN echo "deb http://repo.sawtooth.me/ubuntu/ci xenial universe" >> /etc/apt/sources.list \
 && apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 6B58B1AC10FB5F63 \
 && apt-get update \
 && apt-get install -y -q --allow-downgrades \
    golang \
    git \
    libzmq3-dev \
    python3-grpcio-tools=1.1.3-1 \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

ENV GOPATH=/go:/project/sawtooth-core/sdk/go:/project/sawtooth-core/sdk/examples/intkey_go:/project/sawtooth-core/sdk/examples/noop_go:/project/sawtooth-core/families/burrow_evm

RUN mkdir /go \
 && go get -u \
    github.com/golang/protobuf/proto \
    github.com/golang/protobuf/protoc-gen-go \
    github.com/pebbe/zmq4 \
    github.com/brianolson/cbor_go \
    github.com/satori/go.uuid \
    github.com/btcsuite/btcd/btcec \
    gopkg.in/fatih/set.v0 \
    golang.org/x/crypto/ripemd160 \
    github.com/jessevdk/go-flags

EXPOSE 40000/tcp

RUN mkdir -p /project/sawtooth-core/ \
 && mkdir -p /var/log/sawtooth \
 && mkdir -p /var/lib/sawtooth \
 && mkdir -p /etc/sawtooth \
 && mkdir -p /etc/sawtooth/keys

ENV PATH=$PATH:/project/sawtooth-core/bin:/go/bin

WORKDIR /

CMD build_go
