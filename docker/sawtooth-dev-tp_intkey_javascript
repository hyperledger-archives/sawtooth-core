# Description:
#   Builds an image with the dependencies needed by the Sawtooth Lake
#   TP Intkey JavaScript installed.
#
# Build:
#   $ cd sawtooth-core/docker
#   $ docker build . -f sawtooth-dev-tp_intkey_javascript -t sawtooth-dev-tp_intkey_javascript
#
# Run:
#   $ cd sawtooth-core
#   $ docker run -v $(pwd):/project/sawtooth-core sawtooth-dev-tp_intkey_javascript

FROM yarnpkg/node-yarn:0.20-node7

LABEL "install-type"="mounted"

RUN apt-get update \
 && apt-get install -y -q \
    libzmq3-dev=4.0.5+dfsg-2+deb8u1 \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

EXPOSE 40000/tcp

RUN mkdir -p /project/sawtooth-core/ \
 && mkdir -p /var/log/sawtooth \
 && mkdir -p /var/lib/sawtooth \
 && mkdir -p /etc/sawtooth \
 && mkdir -p /etc/sawtooth/keys

ENV PATH=$PATH:/project/sawtooth-core/bin

WORKDIR /

CMD ["tp_intkey_javascript", "tcp://validator:40000"]
