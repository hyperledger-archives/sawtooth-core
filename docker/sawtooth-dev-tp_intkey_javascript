FROM yarnpkg/node-yarn:0.20-node7

RUN apt-get update \
 && apt-get install -y -q \
    libzmq3-dev \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

ARG PROJECT_DIR="/project/sawtooth-core"

WORKDIR $PROJECT_DIR

ENTRYPOINT ./bin/tp_intkey_javascript tcp://validator:40000
