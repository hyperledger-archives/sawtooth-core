# Description:
#   Builds the javascript code in the sawtooth-core repo.
#
# Build:
#   $ cd sawtooth-core/docker
#   $ docker build . -f sawtooth-build-javascript -t sawtooth-build-javascript
#
# Run:
#   $ cd sawtooth-core
#   $ docker run -v $(pwd):/project/sawtooth-core sawtooth-build-javascript

FROM node:6

RUN apt-get update && apt-get install -y -q --no-install-recommends \
    libzmq3-dev \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

CMD /project/sawtooth-core/bin/build_javascript_sdk \
 && /project/sawtooth-core/bin/build_intkey_javascript
