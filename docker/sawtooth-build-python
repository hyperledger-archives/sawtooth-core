FROM ubuntu:xenial

# Install base packages
RUN apt-get update && apt-get install -y -q \
    build-essential \
    git \
    libffi-dev \
    libssl-dev \
    pep8 \
    python3-pip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && pip3 install \
    pylint

# Install additional python3 packages
RUN apt-get update && apt-get install -y -q \
    python3-dev \
    python3-cbor \
    python3-colorlog \
    python3-requests \
    python3-toml \
    python3-yaml \
    python3-zmq \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN pip3 install \
    aiohttp==1.3.5 \
    cryptography \
    grpcio-tools \
    lmdb \
    secp256k1

WORKDIR /project/sawtooth-core/
CMD ./bin/build_python
