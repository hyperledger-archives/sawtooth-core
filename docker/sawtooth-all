FROM ubuntu:xenial

RUN echo "deb http://repo.sawtooth.me/ xenial universe" >> /etc/apt/sources.list \
 && apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 6B58B1AC10FB5F63 \
 && apt-get update \
 && apt-get install -y -q \
    python3-sawtooth-cli \
    python3-sawtooth-config \
    python3-sawtooth-intkey \
    python3-sawtooth-manage \
    python3-sawtooth-poet-common \
    python3-sawtooth-poet-core \
    python3-sawtooth-poet-families \
    python3-sawtooth-poet-simulator \
    python3-sawtooth-rest-api \
    python3-sawtooth-sdk \
    python3-sawtooth-signing \
    python3-sawtooth-validator \
    python3-sawtooth-xo \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

EXPOSE 40000/tcp
EXPOSE 8080

# Entrypoint is left up to user
