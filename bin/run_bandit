top_dir=$(cd $(dirname $(dirname $0)) && pwd)

directories="
    build
    cli/build
    cli/tests
    families/settings/tests
    integration
    integration/sawtooth_integration/tests/*
    rest_api/build
    rest_api/tests
    validator/build
    validator/tests
    validator/tests/test_config/*
"

if [ ! -d "$top_dir/build" ]; then
  mkdir $top_dir/build
fi

for dir in $directories
do
    if [ -z $ignore ]
    then
        ignore="$top_dir/$dir"
    else
        ignore="$ignore,$top_dir/$dir"
    fi
done

bandit -ll -r --ignore-nosec $top_dir \
    --exclude $ignore \
    -f html \
    -o /project/sawtooth-core/build/bandit.html
