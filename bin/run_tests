MODULES="cli, core, rest_api, sdk, signing, validator"
usage() {
    echo "Usage:"
    echo "  $0 [-m Module]"
    echo
    echo "Options:"
    echo "  -h          print usage and exit"
    echo "  -m Module   only run tests of specified module {$MODULES}"
}

# Exit on non-zero exit code from subcommand
set -e
# Set sawtooth-core project directory relative to this file
PROJECT_DIR=$(cd $(dirname $(dirname $0)) && pwd)

# Make sawtooth scripts accessible
PATH=$PROJECT_DIR/bin:$PATH

# Default args
MODULE="all"

while getopts np:m:h opt
do
    case $opt in
        h)
            usage
            exit 0
            ;;
        m)
            MODULE=$OPTARG
            ;;
        p)
            ISOLATION_ID=$OPTARG
            ;;
        n)
            NOBUILD=1
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit 2
            ;;
    esac
done

main() {
    if [ -z $NOBUILD ]
    then
      docker_build_all
    fi

    # Start in project directory
    cd $PROJECT_DIR

    case $MODULE in
        all)
            test_cli
            test_core
            test_rest_api
            test_sdk
            test_signing
            test_validator
            test_poet
            ;;
        cli)
            test_cli
            ;;
        core)
            test_core
            ;;
        rest_api)
            test_rest_api
            ;;
        sdk)
            test_sdk
            ;;
        signing)
            test_signing
            ;;
        validator)
            test_validator
            ;;
        poet)
            test_poet
            ;;

        *)
            echo "Module '$MODULE' not found."
            ;;
    esac
}

test_cli() {
    echo "[---Running cli tests---]"
    run_docker_test ./cli/tests/unit_cli.yaml -s cli
}

test_core() {
    echo "[---Running core tests---]"
}

test_rest_api() {
    echo "[---Running REST API tests---]"
    run_docker_test ./rest_api/tests/unit_rest_api.yaml -s unit-tests
}

test_sdk() {
    echo "[---Running SDK tests---]"
    # config
    run_docker_test \
      core_transactions/config/tests/sawtooth_config_test/tp-config.yaml \
      -s validator

    # transaction processor
    run_docker_test tp-intkey-python -s validator
    run_docker_test tp-intkey-java -s validator
    run_docker_test tp-intkey-javascript -s validator
    run_docker_test tp-xo-python -s validator

    # integration
    run_docker_test intkey-smoke -s integration_test
    run_docker_test xo-smoke -s integration_test
    run_docker_test two_families -s integration_test
}

test_signing() {
    echo "[---Running signing tests---]"
    run_docker_test ./signing/tests/unit_signing.yaml -s signing
}

test_validator() {
    echo "[---Running validator tests---]"
    run_docker_test ./validator/tests/unit_validator.yaml -s validator
}

test_poet(){
    echo "[---Running poet---]"
    run_docker_test ./poet/sawtooth_poet/tests/validator_registry_test/tp_validator_registry.yaml \
    -s validator
}

main
