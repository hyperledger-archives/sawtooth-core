top_dir=$(cd $(dirname $(dirname $0)) && pwd)
path_to_docker=$top_dir/docker

cd $path_to_docker

set -e

while getopts :p:h opt
do
    case $opt in
        h)
            echo "Add a prefix with -p"
            exit 0
            ;;
        p)
            ISOLATION_ID=$OPTARG
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit 2
            ;;
    esac
done

docker_build() {
  image=$1 
  if [ -z $ISOLATION_ID ] || [ $image = "sawtooth-base" ]; then
    tag=$image
  else
    tag=$image:$ISOLATION_ID
  fi
  echo "[ Building $image... ]"

  docker build -f $image -t $tag . \
    --build-arg https_proxy=$https_proxy \
    --build-arg http_proxy=$http_proxy \
    --build-arg HTTPS_PROXY=$HTTPS_PROXY \
    --build-arg HTTP_PROXY=$HTTP_PROXY

  if [ $image = "sawtooth-build-java" ] || [ $image = "sawtooth-build-javascript" ]; then
    docker run --rm -v $top_dir:/project/sawtooth-core $tag
  fi
}

for image in \
  sawtooth-base \
  sawtooth-build-java \
  sawtooth-build-javascript \
  sawtooth-rest_api \
  sawtooth-test \
  sawtooth-tp_config \
  sawtooth-tp_intkey_java \
  sawtooth-tp_intkey_javascript \
  sawtooth-tp_intkey_python \
  sawtooth-tp_xo_python \
  sawtooth-tp_validator_registry \
  sawtooth-validator
do
  docker_build $image
done
