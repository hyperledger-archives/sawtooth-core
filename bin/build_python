top_dir=$(cd $(dirname $(dirname $0)) && pwd)

unset PYTHONPATH

set -e

echo -e "\033[0;32m--- Running protogen ---\n\033[0m"
$top_dir/bin/protogen || exit 1

pkgs="
    signing
    cli
    sdk/python
    rest_api
    validator
    consensus/poet/cli
    consensus/poet/common
    consensus/poet/core
    consensus/poet/families
    consensus/poet/simulator
    families/supplychain/python
"

for pkg in $pkgs
do
    echo -e "\033[0;32m--- Running clean in $pkg ---\n\033[0m"
    cd $top_dir/$pkg
    python3 setup.py clean --all
done

for pkg in $pkgs
do
    echo -e "\033[0;32m--- Running build in $pkg ---\n\033[0m"
    cd $top_dir/$pkg
    python3 setup.py build
    if [ $pkg = "signing" ]; then
        # Workaround for swig ordering bug.
        python3 setup.py build
    fi
done
