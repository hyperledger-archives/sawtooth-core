version = 1
disable_existing_loggers = false

[formatters.simple]
format = "[%(asctime)s.%(msecs)03d [%(threadName)s] %(module)s %(levelname)s] %(message)s"
datefmt = "%H:%M:%S"

[handlers.debug]
level = "DEBUG"
formatter = "simple"
class = "logging.FileHandler"
filename = "/var/log/sawtooth/validator-debug.log"

[handlers.interconnect]
level = "DEBUG"
formatter = "simple"
class = "logging.handlers.RotatingFileHandler"
filename = "/var/log/sawtooth/interconnect.log"
maxBytes = 5000000
backupCount=20

[handlers.error]
level = "ERROR"
formatter = "simple"
class = "logging.FileHandler"
filename = "/var/log/sawtooth/validator-error.log"

[loggers."sawtooth_validator.networking.interconnect"]
level = "DEBUG"
propagate = true
handlers = [ "interconnect"]

[root]
level = "DEBUG"
handlers = [ "error", "debug"]
